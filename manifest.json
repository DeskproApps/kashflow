{
  "name": "@deskpro-apps/my-app",
  "title": "My App",
  "description": "My Deskpro app",
  "version": "0.0.6",
  "scope": "agent",
  "isSingleInstall": false,
  "hasDevMode": true,
  "targets": [{ "target": "ticket_sidebar", "entrypoint": "index.html" }],
  "settings": {
    "username": {
      "title": "Username",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": true,
      "order": 10
    },
    "password": {
      "title": "Password",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": true,
      "order": 20
    }
  },
  "proxy": {
    "whitelist": [
      {
        "url": "https://securedwebapp.com/.*",
        "methods": ["GET", "POST"],
        "timeout": 30
      }
    ]
  }
}
